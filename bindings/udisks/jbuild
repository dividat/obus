(jbuild_version 1)

(library
 ((name obus_udisks)
  (name obus.udisks)
  (wrapped false)
  (libraries (lwt obus))
  (preprocess (pps (lwt.ppx ppx_obus)))))

(rule
 ((targets (uDisks_interfaces.ml uDisks_interfaces.mli))
  (deps    (uDisks_interfaces.obus))
  (action
   (chdir ${SCOPE_ROOT}
    (run ${bin:obus-gen-interface} -keep-common -o ${path-no-dep:uDisks_interfaces} ${<})))))
