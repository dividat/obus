(jbuild_version 1)

(library
 ((name obus_upower)
  (wrapped false)
  (libraries (lwt obus))
  (preprocess (pps (lwt.ppx ppx_obus)))))

(rule
 ((targets (uPower_interfaces.ml uPower_interfaces.mli))
  (deps    (uPower_interfaces.obus))
  (action
   (chdir ${SCOPE_ROOT}
    (run tools/obus_gen_interface.exe -keep-common -o ${path-no-dep:uPower_interfaces} ${<})))))
