(executables
 ((names   (ping pong))
  (modules (ping pong ping_pong))
  (libraries (lwt obus))
  (preprocess (pps (lwt.ppx)))))

(rule
 ((targets (ping_pong.ml ping_pong.mli))
  (deps    (ping_pong.xml))
  (action
   (chdir ${SCOPE_ROOT}
    (run ${bin:obus-gen-interface} -keep-common -o ${path-no-dep:ping_pong} ${<})))))
